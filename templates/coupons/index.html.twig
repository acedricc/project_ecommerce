{% extends 'base.html.twig' %}

{% block title %}Coupons index{% endblock %}

{% block body %}
    <h1>Coupons index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Description</th>
                <th>Remise</th>
                <th>Max_usage</th>
                <th>Date_validation</th>
                <th>Is_valid</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coupon in coupons %}
            <tr>
                <td>{{ coupon.id }}</td>
                <td>{{ coupon.code }}</td>
                <td>{{ coupon.description }}</td>
                <td>{{ coupon.remise }}</td>
                <td>{{ coupon.maxUsage }}</td>
                <td>{{ coupon.dateValidation ? coupon.dateValidation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ coupon.isValid ? 'Yes' : 'No' }}</td>
                <td>{{ coupon.createdAt ? coupon.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_coupons_show', {'id': coupon.id}) }}">show</a>
                    <a href="{{ path('app_coupons_edit', {'id': coupon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_coupons_new') }}">Create new</a>
{% endblock %}
